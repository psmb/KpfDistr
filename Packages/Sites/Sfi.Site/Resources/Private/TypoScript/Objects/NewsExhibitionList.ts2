prototype(Sfi.Site:NewsExhibitionList) < prototype(Flowpack.Listable:List) {
	@context.listTitle = 'Выставки'
	@context.listTitleClass = 'b-headline_red-line'
	prototype(Flowpack.Listable:Listable) {
		@context.limit = 3
		@context.itemRenderer = 'Sfi.Site:NewsExhibitionShort'
		collection = ${q(site).find('[instanceof Sfi.Site:PageExhibition]').find('[instanceof Sfi.Site:News]').get()}
	}
	@cache {
		mode = 'cached'
		entryTags {
			1 = ${'NodeType_Sfi.Site:PageExhibition'}
		}
	}
}
