prototype(Sfi.Site:SmiWidget) < prototype(TYPO3.TypoScript:Template) {
	templatePath = 'resource://Sfi.Site/Private/Templates/Objects/SmiWidget.html'
	list = Sfi.Listable:Listable {
		@context.limit = 3
		@context.itemRenderer = 'Sfi.Site:SmiShort'
		collection = ${q(site).find('[instanceof Sfi.Site:PageSmi]').find('[instanceof Sfi.Site:News]').get()}
	}
}
